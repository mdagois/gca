if !def(SOUND_RGBINC)
def SOUND_RGBINC equ 1

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Sound
; A module to play preset sound effects.
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

rsreset
SOUND_OPEN_WINDOW		rb 1
SOUND_CLOSE_WINDOW		rb 1
SOUND_UNCOVER_TILE		rb 1
SOUND_PUT_FLAG			rb 1
SOUND_REMOVE_FLAG		rb 1
SOUND_LOSE				rb 1
SOUND_WIN				rb 1
SOUNDS_COUNT			rb 0

; initialize sound
macro Sound_Initialize
	call _Sound_Initialize
endm

; play preset sound \1
macro Sound_Play
	push af
	ld a, \1
	call _Sound_Play
	pop af
endm

; update the sound system
; must be called during vblank
macro Sound_Update
	PushAllRegisters
	call _Sound_Update
	PopAllRegisters
endm

endc

