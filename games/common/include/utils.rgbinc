if def(BUILD_DEBUG)
	ld b, b
endc
endm

; output debug message \1
macro debug
if def(BUILD_DEBUG)
	ld d, d
	jr .message\@
	db $64, $64, $00, $00, \1
	.message\@
endc
endm

; output debug message \3 when flag \2 in byte \1 is raised
macro check_z
if def(BUILD_DEBUG)
	push af
	push hl

	ld hl, \1
	bit \2, [hl]
	jr z, .test\@
		debug \3
	.test\@

	pop hl
	pop af
endc
endm

