		pop af
		add a, TILE_INDEX_ZERO
		PushTransfer _SCRN0 + SCRN_VX_B * LINE_EFFECT_B + 19, a

	ret

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

UpdatePitchB:
	ProcessSelection LINE_EFFECT_B, LINE_PITCH_B, LINE_VOLUME_B, SELECTION_EFFECT_B, SELECTION_VOLUME_B

	TestPadInput_PressedAll WRAM_PAD_INPUT, PADF_LEFT
	jr nz, .left
		ld a, [WRAM_EFFECT_B_PITCH]
		dec a
		and a, $03
		ld [WRAM_EFFECT_B_PITCH], a
		jr .update_ui
	.left

	TestPadInput_PressedAll WRAM_PAD_INPUT, PADF_RIGHT
	jr nz, .right
		ld a, [WRAM_EFFECT_B_PITCH]
		inc a
		and a, $03
		ld [WRAM_EFFECT_B_PITCH], a
		jr .update_ui
	.right

	ret

	.update_ui
		ld a, [WRAM_EFFECT_B_PITCH]
		add a, TILE_INDEX_ZERO
		PushTransfer _SCRN0 + SCRN_VX_B * LINE_PITCH_B + 19, a

	ret

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

UpdateVolumeB:
	ProcessSelection LINE_PITCH_B, LINE_VOLUME_B, LINE_EFFECT_A, SELECTION_PITCH_B, SELECTION_EFFECT_A

	TestPadInput_PressedAll WRAM_PAD_INPUT, PADF_LEFT
	jr nz, .left
		ld a, [WRAM_EFFECT_B_VOLUME]
		dec a
		cp a, $FF
		jr nz, .underflow
			ld a, 2
		.underflow
		ld [WRAM_EFFECT_B_VOLUME], a
		jr .update_ui
	.left

	TestPadInput_PressedAll WRAM_PAD_INPUT, PADF_RIGHT
	jr nz, .right
		ld a, [WRAM_EFFECT_B_VOLUME]
		inc a
		cp a, 3
		jr nz, .overflow
			xor a
		.overflow
		ld [WRAM_EFFECT_B_VOLUME], a
		jr .update_ui
	.right

	ret

	.update_ui
		ld a, [WRAM_EFFECT_B_VOLUME]
		add a, TILE_INDEX_ZERO
		PushTransfer _SCRN0 + SCRN_VX_B * LINE_VOLUME_B + 19, a

	ret

