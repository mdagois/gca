	ret

	.update_ui
		ld a, [WRAM_ENV_STEP]
		ld b, a
		sla a
		sla a
		add a, b
		ld h, 0
		ld l, a
		ld de, EnvelopeStepLengthTable
		add hl, de

		ld a, [hl]
		push hl
		PushTransfer _SCRN0 + SCRN_VX_B * LINE_ENV_STEP + 15, a
		pop hl
		inc hl
		ld a, [hl]
		push hl
		PushTransfer _SCRN0 + SCRN_VX_B * LINE_ENV_STEP + 16, a
